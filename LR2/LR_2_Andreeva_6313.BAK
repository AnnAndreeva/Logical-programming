include "lr_2_andreeva_6313.inc"

predicates
  
  nondeterm имя(string)
  nondeterm жанр(string)
  nondeterm художник(string)
  nondeterm соотвествие(string, string, string)
  nondeterm решение(string, string, string, string, string, string, string, string, string)


clauses
  имя("Антон").
  имя("Максим").
  имя("Дима").
  жанр("портрет").
  жанр("пейзаж").
  жанр("натюрморт").
  художник("Репин").
  художник("Шишкин").
  художник("Рублёв").
  %X-имя,Y-жанр,Z-художник
  соотвествие(X, Y, Z):-имя(X),жанр(Y),художник(Z),
  			X="Антон",Y = "портрет", not(Z="Репин").
  соотвествие(X, Y, Z):-имя(X),жанр(Y),художник(Z),
  			X="Максим",not(Y = "пейзаж"), Z="Шишкин".
  соотвествие(X, Y, Z):-имя(X),жанр(Y),художник(Z),
  			X="Дима".
  	     	
  решение(X1,Y1,Z1,X2,Y2,Z2,X3,Y3,Z3):- X1="Антон",соотвествие(X1,Y1,Z1),
					X2="Максим", соотвествие(X2,Y2,Z2),
					X3="Дима", соотвествие(X3,Y3,Z3),
					Y1<>Y2, Y2<>Y3, Y1<>Y3,
					Z1<>Z2, Z2<>Z3, Z1<>Z3.
goal

  решение(X1,Y1,Z1,X2,Y2,Z2,X3,Y3,Z3),
  write(X1," - жанр: ",Y1," - художник: ",Z1),nl,
  write(X2," - жанр: ",Y2," - художник: ",Z2),nl,
  write(X3," - жанр: ",Y3," - художник: ",Z3),nl.
